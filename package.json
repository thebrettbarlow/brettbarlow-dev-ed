{
  "name": "brettbarlow-dev-ed",
  "version": "1.0.0",
  "description": "Brett Barlow's Salesforce Developer Org",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/thebrettbarlow/brettbarlow-dev-ed.git"
  },
  "keywords": [
    "salesforce",
    "apex",
    "lwc"
  ],
  "author": "thebrettbarlow",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/thebrettbarlow/brettbarlow-dev-ed/issues"
  },
  "homepage": "https://github.com/thebrettbarlow/brettbarlow-dev-ed#readme",
  "engines": {
    "node": ">= 14.15.0",
    "npm": ">= 6.5.0"
  },
  "scripts": {
    "check:apex": "prettier --check '**/*.{cls,trigger}'",
    "check:apex:scripts": "prettier --check '**/*.apex' --parser apex-anonymous",
    "check:lwc": "prettier --check '**/lwc/**/*.{css,html,js}'",
    "check:other": "prettier --check '**/*.{json,md,yml}'",
    "lint:apex": "sfdx scanner:run --severity-threshold=2 --target='**/*.apex,**/*.cls,**/*.trigger' --engine=pmd",
    "lint:lwc": "sfdx scanner:run --severity-threshold=2 --target='**/lwc/**/*.js' --eslintconfig=.eslintrc",
    "prepare": "husky install",
    "sf:open": "sfdx force:org:open",
    "sf:validate": "sfdx force:source:deploy --checkonly --sourcepath=force-app --wait=10",
    "test:apex": "sfdx force:apex:test:run --testlevel=RunLocalTests --wait=10",
    "test:apex:coverage": "sfdx force:apex:test:run --testlevel=RunLocalTests --wait=10 --codecoverage --detailedcoverage --outputdir=coverage/apex --resultformat=human",
    "test:lwc": "sfdx-lwc-jest",
    "test:lwc:coverage": "sfdx-lwc-jest --coverage"
  },
  "devDependencies": {
    "@babel/core": "^7.18.2",
    "@babel/eslint-parser": "^7.18.2",
    "@lwc/eslint-plugin-lwc": "^1.2.1",
    "@salesforce/eslint-config-lwc": "^3.3.1",
    "@salesforce/eslint-plugin-lightning": "^1.0.0",
    "@salesforce/sfdx-lwc-jest": "^1.1.0",
    "@salesforce/sfdx-scanner": "^3.1.2",
    "eslint": "^8.17.0",
    "eslint-plugin-import": "^2.26.0",
    "eslint-plugin-jest": "^26.5.3",
    "husky": "^8.0.1",
    "lint-staged": "^13.0.0",
    "prettier": "2.6.2",
    "prettier-plugin-apex": "1.10.0"
  },
  "lint-staged": {
    "**/*.{cls,trigger}": "prettier --write",
    "**/*.apex": "prettier --write --parser apex-anonymous",
    "**/lwc/**/*.{css,html,js}": "prettier --write",
    "**/*.{json,md,yml}": "prettier --write"
  }
}
